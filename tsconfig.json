{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2018", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": "./src",
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
